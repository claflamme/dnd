doctype html

block vars
  - var bodyclass = null;
  
html(lang='en')
  
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(href='https://fonts.googleapis.com/css?family=Alegreya:400,400i,700,700i', rel='stylesheet')
      link(rel='stylesheet', href=contents.css['main.styl'].url)
      script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.5.4/react.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.5.4/react-dom.min.js')
        
  body(class=bodyclass)
    block content
